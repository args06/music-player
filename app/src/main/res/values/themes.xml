<resources>
    <!-- Base application theme. -->
    <style name="Theme.NuberJam" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_main</item>
        <item name="colorPrimaryVariant">@color/primary_main</item>
        <item name="colorOnPrimary">@color/primary_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_darker</item>
        <item name="colorSecondaryVariant">@color/primary_gray</item>
        <item name="colorOnSecondary">@color/primary_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle">@style/CenturyGothicTextViewStyle</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="CenturyGothicTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textColor">@color/primary_black</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/space_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_8dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="hintTextColor">@color/secondary_main</item>
    </style>

    <style name="CustomTextInputEditText">
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomMaterialButton" >
        <item name="android:elevation">@dimen/space_4dp</item>
        <item name="android:fontFamily">@font/century_gothic_bold</item>
        <item name="android:paddingVertical">@dimen/font_16sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_main</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="backgroundTint">@color/secondary_main</item>
        <item name="cornerRadius">@dimen/space_8dp</item>
    </style>
    
    <style name="CustomAppBarTitle">
        <item name="android:textSize">@dimen/font_25sp</item>
        <item name="android:textColor">@color/secondary_main</item>
        <item name="android:fontFamily">@font/century_gothic_bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.NuberJam">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>